{
  "mcpServers": {
    "joplin": {
      "_comment": "For pip install (recommended):",
      "command": "joplin-mcp-server",
      "env": {
        "JOPLIN_TOKEN": "your_joplin_api_token_here"
      }
    },
    "joplin-uvx": {
      "_comment": "Zero-install via uvx (requires uv):",
      "command": "uvx",
      "args": [
        "joplin-mcp"
      ],
      "env": {
        "JOPLIN_TOKEN": "your_joplin_api_token_here"
      }
    },
    "joplin-sse": {
      "_comment": "For SSE transport (recommended for gemini-cli and OpenAI clients - better session compatibility) (requires running server separately):",
      "transport": "sse",
      "url": "http://localhost:8000/mcp",
      "env": {
        "JOPLIN_TOKEN": "your_joplin_api_token_here"
      }
    },
    "joplin-http": {
      "_comment": "For HTTP transport (requires running server separately):",
      "transport": "http",
      "url": "http://localhost:8000/mcp",
      "env": {
        "JOPLIN_TOKEN": "your_joplin_api_token_here"
      }
    },
    "joplin-streamable-http": {
      "_comment": "For Streamable HTTP transport (recommended for web clients - supports streaming and server notifications):",
      "transport": "streamable-http",
      "url": "http://localhost:8000/mcp",
      "env": {
        "JOPLIN_TOKEN": "your_joplin_api_token_here"
      }
    }
  }
}
